package edu.kh.project.board.controller;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.bind.annotation.SessionAttribute;
import org.springframework.web.bind.annotation.SessionAttributes;

import edu.kh.project.board.model.dto.Board;
import edu.kh.project.board.model.dto.Comment;
import edu.kh.project.member.model.dto.Member;
import edu.kh.project.member.model.service.CommentService;

// @Controller + @ResponseBody

@RestController // 요청/응답 처리(단, 모든 요청 응답은 비동기)
				// -> REST API 를 구축하기 위한 Controller
@SessionAttributes({"loginMember", "board"})
public class CommentController {
	
	private CommentService service;
	
	//댓글 목록 조회					// json 통신 시 한글깨짐 방지 코드
	@GetMapping(value="/comment", produces="application/json; charset=UTF-8")
	public List<Comment> select(int boardNo) {
		
		
		return service.select();
		// 동기시 return : forward / redirect
		// 비동기 시 return : 값 자체
	}
	
	
	
	// 댓글 삽입
	@GetMapping(value="/comment/insert", produces="application/json; carset=UTF-8")
	public int insert(@SessionAttribute("board") Board board,
			String commentContent,
			@SessionAttribute("loginMember") Member loginMember){
		Map<String, Object> map = new HashMap<String, Object>();
		map.put("boardNo", boardNo);
		map.put("commentContent", commentContent);
		map.put("memberNo", loginMember.getMemberNo());
		int result = service.insert(map);		
		return result;
	}
	// 댓글 삭제
	
	// 댓글 수정
}
